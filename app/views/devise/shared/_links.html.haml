- if notice
  #card-alert.card.orange.lighten-5
    .card-content.orange-text
      = notice
    %button.close.orange-text{"aria-label" => "Close", "data-dismiss" => "notice", :type => "button", :onclick => "this.parentElement.style.display='none';" }
      %span{"aria-hidden" => "true"} ×
- if alert
  #card-alert.card.red.lighten-5
    .card-content.red-text
      = alert
    %button.close.red-text{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button", :onclick => "this.parentElement.style.display='none';"}
      %span{"aria-hidden" => "true"} ×


- if controller_name != 'sessions'
  = link_to "Log in", new_session_path(resource_name)
  %br/
- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to "Sign up", new_registration_path(resource_name)
  %br/
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  = link_to "Forgot your password?", new_password_path(resource_name)
  %br/
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name)
  %br/
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name)
  %br/

%br/

.row.s12
  = link_to '<i class="fa fa-facebook"></i>  Sign in with facebook'.html_safe, omniauth_authorize_path(resource_name, 'facebook'), :class => 'btn btn-large btn-social social facebook waves-effect waves-light s12'
.row.s12
  = link_to '<i class="fa fa-google"></i>  Sign in with google'.html_safe, omniauth_authorize_path(resource_name, 'google_oauth2'), :class => 'btn btn-large btn-social social google waves-effect waves-light s12'
