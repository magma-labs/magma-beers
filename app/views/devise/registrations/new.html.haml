.valign-wrapper.row.login-box
  .col.card.s10.pull-s1.m6.pull-m3.l4.pull-l4
    .card-content
      .card-title Sign up
      %br/

      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!

        .row
          .input-field.col.s12
            %i.material-icons.prefix account_circle
            = f.label :email
            = f.email_field :email, autofocus: true, autocomplete: "off"
        .row
          .input-field.col.s12
            %i.material-icons.prefix vpn_key
            = f.label :password
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
            = f.password_field :password, autocomplete: "off"
        .row
          .input-field.col.s12
            %i.material-icons.prefix vpn_key
            = f.label :password_confirmation
            = f.password_field :password_confirmation, autocomplete: "off"
        .actions
          = f.submit "Sign up", class: 'btn blue waves-effect waves-light'
        %br/

      = render "devise/shared/links"
